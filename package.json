{
  "name": "gravity-pdf",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "core-js": "3.6.5",
    "lodash.debounce": "^4.0.8",
    "object-to-formdata": "^4.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-dropzone": "^9.0.0",
    "react-redux": "7.1.3",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "4.0.4",
    "redux-saga": "^1.0.2",
    "redux-watch": "^1.1.1",
    "reselect": "^4.0.0",
    "superagent": "3.8.3"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.10.5",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.9.4",
    "@wordpress/scripts": "^5.1.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "8.1.0",
    "babel-plugin-istanbul": "6.0.0",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "cross-env": "7.0.0",
    "css-loader": "3.4.2",
    "dotenv": "^8.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "fibers": "^5.0.0",
    "file-loader": "6.0.0",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.2",
    "jquery": "^3.4.1",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "0.9.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "redux-devtools-extension": "^2.13.8",
    "redux-mock-store": "^1.5.3",
    "sass": "1.26.10",
    "sass-loader": "8.0.2",
    "standard": "^14.3.4",
    "terser-webpack-plugin": "2.3.5",
    "testcafe": "^1.6.0",
    "url-loader": "4.1.0",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-merge": "4.2.2"
  },
  "scripts": {
    "lint:js": "eslint src/assets/js/**/*.js",
    "lint:js:fix": "eslint src/assets/js/**/*.js --fix",
    "lint:php": "npm run env docker-run -- php composer lint:errors",
    "lint:php:format": "npm run env docker-run -- php composer format",
    "test:e2e": "cross-env NODE_ENV=test testcafe chrome tests/e2e -s takeOnFails=true,fullPage=true",
    "test:e2e:headless": "cross-env NODE_ENV=test testcafe chrome:headless tests/e2e -s takeOnFails=true,fullPage=true",
    "test:e2e:file": "cross-env NODE_ENV=test testcafe chrome -s takeOnFails=true,fullPage=true",
    "test:e2e:watch": "cross-env NODE_ENV=test testcafe chrome tests/e2e -L",
    "test:e2e:file:watch": "cross-env NODE_ENV=test testcafe chrome -L",
    "test:php": "wp-scripts env test-php",
    "test:php:multisite": "cross-env WP_MULTISITE=1 wp-scripts env test-php",
    "test:js": "jest --verbose",
    "test:js:coverage": "jest --coverage --verbose",
    "test:js:watch": "jest --watchAll",
    "prebuild": "yarn && yarn prebuild:core-fonts",
    "prebuild:core-fonts": "bash bin/json-payload.sh https://api.github.com/repos/GravityPDF/mpdf-core-fonts/contents/ core-fonts.json",
    "build:dev": "cross-env NODE_ENV=development webpack --progress --colors --watch --mode development",
    "build:production": "cross-env NODE_ENV=production webpack --mode production",
    "check-licenses": "wp-scripts check-licenses --prod --gpl2",
    "env": "wp-scripts env",
    "env:install": "bash bin/install.sh",
    "env:install:gf": "bash bin/install-gravityforms.sh",
    "env:install:phpunit": "bash bin/install-phpunit.sh",
    "env:reset": "bash bin/reset.sh"
  },
  "wp-env": {
    "plugin-dir": "gravity-forms-pdf-extended",
    "plugin-name": "Gravity PDF",
    "docker-template": "./.docker/docker-compose.override.yml.template"
  }
}
